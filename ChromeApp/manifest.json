{
  "name": "Arduino Serial to CSV",
  "version": "0.0.2",
  "manifest_version": 2,
  "minimum_chrome_version": "31",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "icons": {
    "16":  "assets/icon_16x16.png",
    "128": "assets/icon_128x128.png"
  },
  "permissions": [ "serial", { "fileSystem": ["write", "retainEntries", "directory"]}, "storage" ],
  "file_handlers": {
    "text": { "types": [ "text/*" ],
      "title": "Text editor"
    }
  },
  "description": "Control and receive data from a serial device, save to CSV file."
}
